# Taskwarrior API Configuration

# Required: Auth tokens (comma-separated)
TW_API_TOKENS=dev-token-12345,another-token-abc

# Optional: Server configuration
TW_API_HOST=0.0.0.0
TW_API_PORT=8080

# Optional: Enable embedded example UI (enabled by default)
# The UI is read-only and intended for development/testing
TW_API_ENABLE_UI=true

# Optional: Taskwarrior data location
TW_DATA_LOCATION=~/.task

# Optional: Logging
TW_API_LOG_LEVEL=info

# Optional: CORS
TW_API_CORS_ENABLED=true
TW_API_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

